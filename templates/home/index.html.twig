{% extends 'base.html.twig' %}


{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/home.ts') }} defer"></script>
{% endblock %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="content">
        <div class="header"></div>
        <div id="welcome" class="welcome_block">

            <h1 class="loginClass">Postbird</h1>
            <img src="{{ asset('img/logo_firebird.png') }}" height="200">

        </div>
        <div class="login_section">
            <form method="post" class="login_form">
                <div id="username">
                    <label for="inputUsername">Username: </label>
                    <input type="text" name="username" id="inputUsername" class="loginInput">
                </div>
                <div id="password">
                    <label for="inputPassword">Password: </label>
                    <input type="password" name="password" id="inputPassword" class="loginInput">
                </div>
                <div id="loginBtnDiv" class="btnClass">
                    <button id="loginBtn" class="loginInput" type="submit">Sign in</button>
                </div>
            </form>
        </div>
        <div class="register_section">
            <h3>No account?</h3>
            <div id="registerBtnDiv" class="btnClass">
                <button id="registerBtn" class="registerInput" type="submit">
                    <a href="{{ path('app_register') }}" class="linkBtn">Register</a></button>
            </div>
        </div>
        <div class="footer"></div>
    </div>

